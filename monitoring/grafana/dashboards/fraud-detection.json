{
  "dashboard": {
    "id": null,
    "uid": "fraud-detection",
    "title": "Fraud Detection Monitoring",
    "tags": ["fraud", "ml", "production"],
    "timezone": "browser",
    "schemaVersion": 16,
    "version": 0,
    "refresh": "10s",
    "panels": [
      {
        "id": 1,
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
        "type": "graph",
        "title": "Prediction Rate (per minute)",
        "targets": [
          {
            "expr": "rate(fraud_predictions_total[1m])",
            "legendFormat": "{{prediction}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "ops", "label": "Predictions/sec"},
          {"format": "short"}
        ]
      },
      {
        "id": 2,
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0},
        "type": "graph",
        "title": "Prediction Latency (p50, p95, p99)",
        "targets": [
          {
            "expr": "histogram_quantile(0.50, rate(fraud_prediction_duration_seconds_bucket[5m]))",
            "legendFormat": "p50",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.95, rate(fraud_prediction_duration_seconds_bucket[5m]))",
            "legendFormat": "p95",
            "refId": "B"
          },
          {
            "expr": "histogram_quantile(0.99, rate(fraud_prediction_duration_seconds_bucket[5m]))",
            "legendFormat": "p99",
            "refId": "C"
          }
        ],
        "yaxes": [
          {"format": "s", "label": "Latency"},
          {"format": "short"}
        ]
      },
      {
        "id": 3,
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8},
        "type": "stat",
        "title": "Total Predictions",
        "targets": [
          {
            "expr": "sum(fraud_predictions_total)",
            "refId": "A"
          }
        ],
        "options": {
          "colorMode": "value",
          "graphMode": "area",
          "justifyMode": "auto",
          "orientation": "auto"
        }
      },
      {
        "id": 4,
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8},
        "type": "gauge",
        "title": "Current Fraud Probability",
        "targets": [
          {
            "expr": "fraud_probability",
            "refId": "A"
          }
        ],
        "options": {
          "showThresholdLabels": false,
          "showThresholdMarkers": true
        },
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 0.5, "color": "yellow"},
                {"value": 0.7, "color": "red"}
              ]
            },
            "min": 0,
            "max": 1
          }
        }
      },
      {
        "id": 5,
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 16},
        "type": "graph",
        "title": "Fraud vs Non-Fraud Predictions",
        "targets": [
          {
            "expr": "fraud_predictions_total{prediction=\"fraud\"}",
            "legendFormat": "Fraud",
            "refId": "A"
          },
          {
            "expr": "fraud_predictions_total{prediction=\"legitimate\"}",
            "legendFormat": "Legitimate",
            "refId": "B"
          }
        ],
        "yaxes": [
          {"format": "short", "label": "Count"},
          {"format": "short"}
        ]
      }
    ]
  },
  "overwrite": true
}
